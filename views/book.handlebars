    <div class="list-group">
        {{#each classes as |class|}}
        <a href="#"class="list-group-item list-group-item-action active" aria-current="true">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1 table-header">{{class.id}}&nbsp;{{class.class_name}}</h5>
            </div>
            
            <p class="mb-1">Date: {{class.date}}</p>
            <p class="mb-1">Time: {{class.time}}</p>
            <p class="mb-1">Coach: {{class.coach}}</p>

            <small>Spots available: {{class.available}}</small> &nbsp;
            <div class="btn-group" role="group" aria-label="Basic example" id={{class.id}}>
            <button id="bpush" type="button" class="btn btn-primary">Book Class</button>
        </div>
